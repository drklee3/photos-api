{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["esnext"],
    "strict": true,
    // https://github.com/graphql-nexus/nexus-plugin-prisma/issues/1056
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
}
