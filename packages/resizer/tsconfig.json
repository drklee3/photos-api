{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["esnext"],
    "strict": true,
    // @aws-sdk/client-s3 has some type errors
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "typeRoots": [
      "./node_modules/@types",
    ]
  },
  "include": [
    "src/**/*",
  ],
  "references": [
    {
      "path": "../client"
    },
    {
      "path": "../shared"
    }
  ],
}
